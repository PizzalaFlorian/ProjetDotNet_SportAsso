@model IEnumerable<SportAsso.utilisateur>

@{
    ViewBag.Title = "Index";
}
<section>
    <h3 class="center">Liste des utilisateurs</h3>
    <p>
        @Html.ActionLink("Ajouter un nouvel utilisateur", "Create","utilisateurs", null, new { @class = "btn btn - default" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nom)
            </th>
            <th>
                <bold>type d'utilisateur</bold>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.adresse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telephone)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.prenom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.type_user)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.adresse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.telephone)
                </td>
                <td>
                    @Html.ActionLink("Modifier", "Edit", "utilisateurs", new { id = item.utilisateur_id }, new { @class = "btn btn - default" }) |
                    @Html.ActionLink("Supprimer", "Delete", "utilisateurs", new { id = item.utilisateur_id }, new { @class = "btn btn - default" })
                </td>
            </tr>
        }

    </table>
</section>
