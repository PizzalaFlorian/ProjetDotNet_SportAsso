<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SportAsso</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    <link href="~/Content/materialize/css/materialize.min.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="~/Content/bulma/js/jquery-2.2.0.min.js"></script>
    <script src="~/Content/materialize/js/materialize.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SportAsso", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.IsInRole("admin"))
                    {
                        <li>@Html.ActionLink("Utilisateurs", "Index", "utilisateurs")</li>
                        <li>@Html.ActionLink("Disciplines", "Index", "disciplines")</li>
                        <li>@Html.ActionLink("Sections", "Index", "sections")</li>
                        <li>@Html.ActionLink("Dossiers", "MesDocuments", "documents")</li>
                        <li>@Html.ActionLink("Paiments", "Paiments", "participations")</li>
                        <li>@Html.ActionLink("Calendrier", "calendrier", "participe")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    }
                    else {
                        if (User.IsInRole("encadrant"))
                        {
                            <li>@Html.ActionLink("Accueil", "Index", "Home")</li>
                            <li>@Html.ActionLink("Calendrier", "calendrier", "participe")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Disciplines", "Index", "Home")</li>
                            <li>@Html.ActionLink("Calendrier", "calendrier", "participe")</li>
                            <li>@Html.ActionLink("Mes documents", "MesDocuments", "documents")</li>
                            <li>@Html.ActionLink("Mes inscriptions", "MesInscriptions", "participes")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        }
                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="body-content">
        @RenderBody()
        <hr />
        <footer class="center">
            <p>&copy; @DateTime.Now.Year - SportAsso</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
